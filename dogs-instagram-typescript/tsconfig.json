{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext"
		],
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": false,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"skipDefaultLibCheck": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"typeRoots": [
			"./src/@types",
			"./node_modules/@types"
		],
		"baseUrl": "./",
		"paths": {
			"~/*": [
				"src/*"
			],
			"@turn/styled": [
				"src/styled"
			]
		}
	},
	"include": [
		"src",
		"src/components",
		"src/custom.d.ts"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
